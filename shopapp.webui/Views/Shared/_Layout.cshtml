<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopapp</title>

    @* Bootstrap 4.4 Added *@
    <link rel="stylesheet" href="/modules/bootstrap/dist/css/bootstrap.min.css" crossorigin="anonymous">

    @* Css Added *@
    <link rel="stylesheet" href="~/css/style.css">

    @* Fontawesome Added *@
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css">

    @* Css Section *@
    @RenderSection("Css", false)

</head>
<body>
    
    @await Html.PartialAsync("_navbar")
    
    <main class="my-3">
        <div class="container">
            @if(TempData["message"] != null)
            {
                <partial name="_ResultMessage" model="@(TempData.Get<AlertMessage>("message"))"/>
            }
            @RenderBody()
        </div>
    </main>

    <footer class="text-center text-white fixed-bottom bg-dark">
        <div class="p-1" style="background-color: rgba(0, 0, 0, 0.2);">
            Shopapp | 2022
        </div>
    </footer>

    @* Bootstrap Scripts Added *@
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>

    @RenderSection("Scripts", false)
</body>
</html>

